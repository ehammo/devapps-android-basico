<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

	<EditText
		android:id="@+id/editTextNumberFirst"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:ems="10"
		android:hint="@string/main_activity_text_first_value"
		android:inputType="number"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<EditText
		android:id="@+id/editTextNumberSecond"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:ems="10"
		android:hint="@string/main_activity_text_second_value"
		android:inputType="number"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/editTextNumberFirst" />

	<Button
		android:id="@+id/button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:layout_marginEnd="16dp"
		android:text="@string/main_activity_buttom_sum"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/editTextNumberSecond" />
</androidx.constraintlayout.widget.ConstraintLayout>
